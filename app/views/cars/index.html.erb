<div class="container">
  <div class="row g-0">

    <div class="col-6">
      <% @cars.each do |car| %>
        <div class="card text-center my-4">
          <div class="card-header d-flex justify-content-around align-items-center">
            <h4 class="card-title"><%= car.brand %></h4>
            <h3><%= car.model %></h3>
          </div>
          <div class="card-body d-flex justify-content-around align-items-center">
            <p class="card-text"><i class="fas fa-user-alt"> &nbsp;&nbsp;</i><%= car.user.email %></p>
            <div>
              <%= car.price_per_day %>â‚¬/Day
              <%= link_to "More", car_path(car), class: "btn btn-sm btn-warning btn-index" %>
            </div>
          </div>
          <div class="card-footer text-muted">
            <%= car.address %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-6 content-right">
      <div id="map"
        style="width: 100%; height: 100vh;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>

  </div>
</div>
